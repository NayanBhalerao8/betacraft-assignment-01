<div id="root" style="padding: 20px; background-color: #f7f7f7; border-radius: 8px;"></div>
<header style="text-align: center; margin-top: 20px;">
  <% if current_user %>
    <div>
      <h2 style="font-size: 1.5rem; color: #333;">Hey, <%= current_user.email %></h2>
      <%= link_to "View Projects", "/projects", style: "padding: 8px 16px; text-decoration: none; background-color: #4CAF50; color: white; border-radius: 4px;" %><br><br><br>
      <%= link_to "Check Invites", "/check_invites", style: "padding: 8px 16px; text-decoration: none; background-color: #3D9970; color: white; border-radius: 4px;" %><br><br>
      <%#= image_tag(current_user.avatar_url) %>
      <div style="margin-top: 10px;">
        <%= link_to "Edit Account", edit_user_registration_path, style: "padding: 8px 16px; text-decoration: none; background-color: #ff9800; color: white; border-radius: 4px;" %><br><br>
        <%= button_to "Logout", destroy_user_session_path, data: { turbo: "false" }, method: :delete, style: "padding: 8px 16px; margin-left: 10px; background-color: #f44336; color: white; border-radius: 4px;" %>
      </div>
    </div>
  <% else %>
    <div>
      <%= link_to "Login", new_user_session_path, style: "padding: 8px 16px; text-decoration: none; background-color: #4CAF50; color: white; border-radius: 4px;" %>
      <%= link_to "Create Account", new_user_registration_path, style: "padding: 8px 16px; margin-left: 10px; text-decoration: none; background-color: #2196F3; color: white; border-radius: 4px;" %>
    </div>
  <% end %>
</header>